<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="clr-namespace:KognaServer.ViewModels;assembly=KognaController"
    xmlns:avaloniaEdit="clr-namespace:AvaloniaEdit;assembly=AvaloniaEdit"
    x:Class="KognaServer.Views.GCodeEditorView"
    x:DataType="vm:GCodeEditorViewModel"  >
  


  <DockPanel>
    <!-- Toolbar with Open/Save buttons -->
    <StackPanel DockPanel.Dock="Top"
                Orientation="Horizontal"
                Spacing="8"
                Margin="0,0,0,4">
      <Button Content="Open…" Click="OpenFileButton_Clicked"/>
      <Button Content="Save…" Click="SaveFileButton_Clicked"/>
      <Button Content="Stream" Click="OnStream_Click"/>
    </StackPanel>

    <!-- The code editor itself -->
    <avaloniaEdit:TextEditor
        x:Name="Editor"
        ShowLineNumbers="True"
        FontFamily="Consolas,Monospace"
        FontSize="12">
    </avaloniaEdit:TextEditor>

  </DockPanel>

</UserControl>
